	<div class="sandbox">

		<div id="faux">
			#faux clicked!
		</div>

		<div id="faux2">
			#faux2 clicked!
		</div>

		<div id="link">
			#link clicked!
		</div>

		<div id="foo">
			#foo clicked!
		</div>

		<ul>
			<li>
				<a class="anchor" href="#faux">
					<span>Anchor</span>
				</a>
			</li>
			<li class="basic" data-href="#faux">
				<span>Basic</span>
			</li>
			<li>
				<button type="button" class="button" data-href="#faux">
					<span>Button</span>
				</button>
			</li>
			<li class="basic-unfocusable" data-href="#faux">
				<span>Basic</span>
			</li>
		</ul>

	</div>

	<script>

		$('.anchor').fauxAnchor({
			primary: function ( e, done ) {
				console.log('Basic action');
			},
			secondary: function ( e, done ) {
				console.log('Alternative action');
			}
		});

		$('.basic').fauxAnchor({
			primary: function ( e, done ) {
				console.log('Basic action');
			},
			secondary: function ( e, done ) {
				console.log('Alternative action');
			}
		});

		$('.button').fauxAnchor({
			primary: function ( e, done ) {
				console.log('Basic action');
			},
			secondary: function ( e, done ) {
				console.log('Alternative action');
			}
		});

		$('.basic-unfocusable').fauxAnchor({
			focus: false,
			primary: function ( e, done ) {
				console.log('Basic action');
			},
			secondary: function ( e, done ) {
				console.log('Alternative action');
			}
		});

	</script>

