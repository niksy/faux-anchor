{{> top title="All custom event"}}

	<div class="sandbox">

		<div id="faux">
			#faux clicked!
		</div>

		<div id="faux2">
			#faux2 clicked!
		</div>

		<div id="link">
			#link clicked!
		</div>

		<div id="foo">
			#foo clicked!
		</div>

		<ul>
			<li>
				<a class="anchor" href="#faux">
					<span>Anchor</span>
				</a>
			</li>
			<li class="basic" data-href="#faux">
				<span>Basic</span>
			</li>
			<li>
				<button type="button" class="button" data-href="#faux">
					<span>Button</span>
				</button>
			</li>
			<li class="basic-unfocusable" data-href="#faux">
				<span>Basic</span>
			</li>
		</ul>

	</div>

	<script>

		function isOriginalElement ( original, target ) {
			return original.is(target);
		}

		$('.anchor').fauxAnchor({
			basic: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			},
			alternative: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
				done();
			}
		});

		$('.basic').fauxAnchor({
			basic: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			},
			alternative: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			}
		});

		$('.button').fauxAnchor({
			basic: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			},
			alternative: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			}
		});

		$('.basic-unfocusable').fauxAnchor({
			focus: false,
			basic: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			},
			alternative: function ( e, done ) {
				console.log(isOriginalElement($(this), $(e.target)));
			}
		});

	</script>

